CC		=	c++

CFLAGS	=	-Werror -Wall -Wextra -std=c++98

SRC		=	megaphone.cpp

#OBJ		=	$(SRC:.cpp=.o)

NAME	=	megaphone

$(NAME)	:	#$(OBJ)
			$(CC) $(CFLAGS) $(SRC) -o $(NAME)

all		:	$(NAME)

clean	:
			rm -rdf $(OBJ)

fclean	:	clean
			rm -rdf $(NAME)

re		:	fclean all

.PHONY	:	all clean fclean re